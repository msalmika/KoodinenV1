@model KoodinenV1.Models.Kayttaja

@{
    ViewData["Title"] = "Kirjautuminen";
}

<h1>Kirjautuminen</h1>

<h4>Kayttaja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Kirjautuminen">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salasana" class="control-label"></label>
                <input asp-for="Salasana" type="password" class="form-control" />
                <span asp-validation-for="Salasana" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OnAdmin" /> @Html.DisplayNameFor(model => model.OnAdmin)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Kirjaudu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    Eikö sinulla ole vielä käyttäjää?
    @Html.ActionLink("Rekisteröidy tästä", "rekisteröityminen", "rekisteröityminen")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
