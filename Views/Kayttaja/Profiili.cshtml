@model KoodinenV1.Models.Kayttaja

@{
    ViewData["Title"] = "Profiili";
    var suoritetut = ViewBag.suoritetut;
    var kesken = ViewBag.kesken;

}

<h3>Profiili</h3>

<div>
    <h4>Opiskelija</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nimi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nimi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<br />
<br />
<div>
    <a asp-action="Muokkaa" asp-route-id="@Model.KayttajaId">Muokkaa</a>
</div>
<br />
<br />
<h6 style="font-weight:bold">Kurssisuoritukset</h6>
<br />
<ul>
    @if (suoritetut == null)
    {
        <li>
            Ei suoritettuja kursseja.
        </li>
    }
    else

       @foreach (var item in suoritetut)
        {
            <li>
                <strong>Kurssi:</strong>@item.Nimi / suoritettu:@item.SuoritusPVM
            </li>  
        }

   @foreach (var item in kesken)
    {
        <li>
            <strong>Aloitettu:</strong> @item.Nimi
        </li>
    }

</ul>


