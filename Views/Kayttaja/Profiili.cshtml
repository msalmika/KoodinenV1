@model KoodinenV1.Models.Kayttaja

@{
    ViewData["Title"] = "Profiili";
    var kurssisuoritukset = ViewBag.kurssisuoritukset;
    var keskeneräiset = ViewBag.keskeneräiset;


}

<h3>Profiili</h3>

<div>
    <h4>Opiskelija</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nimi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nimi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salasana)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salasana)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OnAdmin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OnAdmin)
        </dd>
    </dl>
</div>
<h6 font="bold">Kurssisuoritukset</h6>
<ul>
    @foreach (var item in kurssisuoritukset)
     {
    <li style="font-weight:bold">
        Kurssi(suoritettu):   @*@item.Nimi*@(@item.SuoritusPvm) @*KESKEN*@
    </li>
     }
</ul>




