@model KoodinenV1.Models.Kurssi

@{
    ViewData["Title"] = "AdminPääsivu";
}

<h1>AdminPääsivu</h1>

<h4>Kurssi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminPääsivu">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KurssiId" />
            <div class="form-group">
                <label asp-for="Nimi" class="control-label"></label>
                <input asp-for="Nimi" class="form-control" />
                <span asp-validation-for="Nimi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kuvaus" class="control-label"></label>
                <input asp-for="Kuvaus" class="form-control" />
                <span asp-validation-for="Kuvaus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KayttajaId" class="control-label"></label>
                <select asp-for="KayttajaId" class="form-control" asp-items="ViewBag.KayttajaId"></select>
                <span asp-validation-for="KayttajaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
